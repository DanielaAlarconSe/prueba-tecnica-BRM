<!-- Script -->
    <script>
        function agregarItem(external){
            var url = 'http://localhost:3000/agregar' + external;
            $.ajax({
                url: url,
                type: 'GET',
                dataType: 'json',
                success: function (data, textStatus, jqXHR) {
                    refrescar();
                }, error: function (jqXHR, textStatus, errorThrown) {
                    console.log(jqXHR);
                }
            });
        }
    </script>
<!-- /Script -->

<!-- Ruta -->
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="">Principal</a></li>
    <li class="breadcrumb-item active">Visión general</li>
</ol>
<!-- /Ruta-->

<!-- Alertas -->
<% if(locals.flash){ %>
<div class="alert alert-info alert-dismissible fade show">
    <%- locals.flash %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>
<!-- /Alertas -->



<!-- Slider-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-image"></i>
        Galeria de Vinos</div>
    <div class="card-body">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% listaVino.forEach(function(vino, i){ %>
                <% if(i == 0){ %>
                <div class="carousel-item active slide">
                    <img class="d-block" src="/img/<%=vino.foto%>" alt="<%=vino.nombre%>">
                    <div class="carousel-caption d-none d-md-block texts">
                        <h5><%=vino.nombre%> (<%=vino.marca.nombre%>)</h5>
                        <p><b>Precio: </b>$<%=vino.precio%><br><b>Quedan: </b><%=vino.cantidad%> unidades</p>
                        <% if (user.rol === 'Usuario') { %><a id="<%=i%>" href="#" onclick="return false" class="btn btn-warning"><i class="fas fa-shopping-cart"></i>Comprar Ahora</a><% } %>
                        <script>
                            $('#<%=i%>').click(function(){
                                agregarItem('<%=vino.external_id%>');
                            });
                        </script>
                    </div>
                </div>
                <% }else{ %>
                <div class="carousel-item slide">
                    <img class="d-block" src="/img/<%=vino.foto%>" alt="<%=vino.nombre%>">
                    <div class="carousel-caption d-none d-md-block texts">
                        <h5><%=vino.nombre%> (<%=vino.marca.nombre%>)</h5>
                        <p><b>Precio: </b>$<%=vino.precio%><br><b>Quedan: </b><%=vino.cantidad%> unidades</p>
                        <% if (user.rol === 'Usuario') { %><a id="<%=i%>" href="#" onclick="return false" class="btn btn-warning"><i class="fas fa-shopping-cart"></i>Comprar Ahora</a><% } %>
                        <script>
                            $('#<%=i%>').click(function () {
                                agregarItem('<%=vino.external_id%>');
                            });
                        </script>
                    </div>
                </div>
                <% }}); %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <div class="card-footer small text-muted">Galería - Santos licores</div>
</div>
<!-- /Slider-->